# Server Configuration
NODE_ENV=development
PORT=3001
SESSION_SECRET=your-session-secret-key-here

# Google OAuth (from client_secret.json)
# These are automatically read from client_secret.json

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# Client URL (for production)
CLIENT_URL=https://your-domain.com

# Dashboard URL (for email links)
DASHBOARD_URL=http://localhost:3000

# Email Service Configuration
# Options: console, smtp, gmail
EMAIL_SERVICE=console
EMAIL_FROM=noreply@timesherpa.app

# SMTP Configuration (if EMAIL_SERVICE=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Gmail Configuration (if EMAIL_SERVICE=gmail)
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Encryption Key for storing refresh tokens
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here 